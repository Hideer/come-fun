{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
      "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/layout/me/index",
      "style": {
        "navigationStyle": "custom",
        "navigationBarTitleText": "我的"
      }
    },
    {
      "path": "pages/layout/home/index",
      "style": {
        "navigationStyle": "custom", // 隐藏系统导航栏
        "navigationBarTextStyle": "white",
        "navigationBarTitleText": "首页"
      }
    },
    {
      "path": "pages/layout/fun/index",
      "style": {
        "navigationStyle": "custom",
        "navigationBarTitleText": "发布活动"
      }
    }
    // ,
    // {
    //   "path": "pages/layout/me/index",
    //   "style": {
    //     "navigationStyle": "custom",
    //     "navigationBarTitleText": "我的"
    //   }
    // }
  ],
  "tabBar": {
    "color": "#909399",
    "selectedColor": "#303133",
    "backgroundColor": "#FFFFFF",
    "borderStyle": "black",
    "list": [
      {
        "pagePath": "pages/layout/home/index"
      },
      {
        "pagePath": "pages/layout/fun/index"
      },
      {
        "pagePath": "pages/layout/me/index"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  }
}
